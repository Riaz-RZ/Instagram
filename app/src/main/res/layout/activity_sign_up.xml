<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingHorizontal="40dp"
    tools:context=".signUp">
    <ImageView
        android:id="@+id/signUpTitleImage"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/instagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/descriptionTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up to see photos and videos from your friends"
        app:layout_constraintStart_toStartOf="@id/signUpTitleImage"
        app:layout_constraintEnd_toEndOf="@id/signUpTitleImage"
        app:layout_constraintTop_toBottomOf="@id/signUpTitleImage"
        android:textAlignment="center"
        android:textColor="#8E8989"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with Facebook"
        android:id="@+id/facebookLoginBTN"
        app:layout_constraintStart_toStartOf="@id/descriptionTV"
        app:layout_constraintEnd_toEndOf="@id/descriptionTV"
        app:layout_constraintTop_toBottomOf="@id/descriptionTV"
        android:backgroundTint="#2196F3"
        android:layout_marginVertical="20dp"/>
    <View
        android:id="@+id/ViewOne"
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:layout_marginVertical="20dp"
        android:background="#E2D1D1"
        app:layout_constraintStart_toStartOf="@id/facebookLoginBTN"
        app:layout_constraintTop_toBottomOf="@id/facebookLoginBTN" />

    <TextView
        android:id="@+id/orTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="OR"
        app:layout_constraintStart_toEndOf="@id/ViewOne"
        app:layout_constraintTop_toBottomOf="@id/facebookLoginBTN" />

    <View
        android:id="@+id/ViewTwo"
        android:layout_width="130dp"
        android:layout_height="1dp"
        android:background="#E2D1D1"
        app:layout_constraintEnd_toEndOf="@id/facebookLoginBTN"
        app:layout_constraintTop_toTopOf="@id/ViewOne" />
    <EditText
        android:id="@+id/signUpEmailET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F5F5"
        android:hint="Mobile Number or Email"
        android:imeOptions="actionNext"
        android:layout_marginVertical="30dp"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ViewTwo" />
    <EditText
        android:id="@+id/signUpPasswordET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F5F5"
        android:hint="Password"
        android:imeOptions="actionNext"
        android:layout_marginVertical="10dp"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/signUpEmailET"
        app:layout_constraintStart_toStartOf="@id/signUpEmailET"
        app:layout_constraintTop_toBottomOf="@id/signUpEmailET" />
    <EditText
        android:id="@+id/signUpFullNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F5F5"
        android:hint="Full Name"
        android:imeOptions="actionNext"
        android:layout_marginVertical="10dp"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/signUpPasswordET"
        app:layout_constraintStart_toStartOf="@id/signUpPasswordET"
        app:layout_constraintTop_toBottomOf="@id/signUpPasswordET" />
    <EditText
        android:id="@+id/signUpUserNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F5F5"
        android:hint="User Name"
        android:imeOptions="actionNext"
        android:layout_marginVertical="10dp"
        android:inputType="text"
        android:paddingHorizontal="10dp"
        android:paddingVertical="8dp"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/signUpFullNameET"
        app:layout_constraintStart_toStartOf="@id/signUpFullNameET"
        app:layout_constraintTop_toBottomOf="@id/signUpFullNameET" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:id="@+id/signUpSignUpBTN"
        app:layout_constraintStart_toStartOf="@id/signUpUserNameET"
        app:layout_constraintEnd_toEndOf="@id/signUpUserNameET"
        app:layout_constraintTop_toBottomOf="@id/signUpUserNameET"
        android:backgroundTint="#2196F3"
        android:layout_marginVertical="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/haveAccountTV"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/signUpSignUpBTN"
        app:layout_constraintEnd_toEndOf="@id/signUpSignUpBTN"
        app:layout_constraintTop_toBottomOf="@id/signUpSignUpBTN"
        android:text="Have an Account?"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpLoginTV"
        app:layout_constraintStart_toStartOf="@id/haveAccountTV"
        app:layout_constraintEnd_toEndOf="@id/haveAccountTV"
        app:layout_constraintTop_toBottomOf="@id/haveAccountTV"
        android:text="Log in?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#2196F3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signUpGetAppTV"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/signUpLoginTV"
        app:layout_constraintEnd_toEndOf="@id/signUpLoginTV"
        app:layout_constraintTop_toBottomOf="@id/signUpLoginTV"
        android:text="Get the App"
        android:textAlignment="center"
        android:textColor="@color/black"/>
    <LinearLayout
        android:id="@+id/signUplayoutOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="@id/signUpGetAppTV"
        app:layout_constraintStart_toStartOf="@id/signUpGetAppTV"
        app:layout_constraintTop_toBottomOf="@id/signUpGetAppTV">

        <ImageView
            android:id="@+id/googleplaystoreImage"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/googleplay" />

        <ImageView
            android:id="@+id/appstoreImage"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/appstore" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>